<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_share_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/iv_share_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/icon_share_wechat"
        android:visibility="gone"
        tools:ignore="ContentDescription"/>

    <com.handsome.sharelib.iconfont.IconFontTextView
        android:id="@+id/tv_share_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_share_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"/>

</LinearLayout>
